# MCP Server Configuration
# Generated: {{GENERATION_DATE}}

# MCP Server Settings
MCP_SERVER_NAME="{{PROJECT_NAME}} MCP Server"
MCP_TRANSPORT=stdio
MCP_PORT=8001

# FastAPI Backend
MCP_FASTAPI_BASE_URL={{FASTAPI_BASE_URL}}
MCP_FASTAPI_API_PREFIX={{FASTAPI_API_PREFIX}}
MCP_FASTAPI_TIMEOUT=30.0

# Authentication (choose one method)
MCP_AUTH_METHOD={{AUTH_METHOD}}

# JWT Authentication (if AUTH_METHOD=jwt)
# MCP_JWT_SECRET=your-secret-key-here
# MCP_JWT_TOKEN=your-generated-jwt-token

# Session Authentication (if AUTH_METHOD=session)
# MCP_SESSION_COOKIE_NAME=session_id
# MCP_SESSION_TOKEN=your-session-token-here

# HTTP Client
MCP_HTTP_MAX_CONNECTIONS=100
MCP_HTTP_MAX_KEEPALIVE=20
MCP_HTTP_KEEPALIVE_EXPIRY=30.0

# Logging
MCP_LOG_LEVEL=INFO
# MCP_LOG_FILE=mcp-server.log

